<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fitsSystemWindows="true">

    <!-- Title Bar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/dark_red"
        android:elevation="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About Page"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"/>

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:layout_below="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:src="@drawable/profile"
                android:background="@drawable/circle_shape"
                android:clipToOutline="true"
                android:outlineProvider="background"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"/>

            <!-- App Title -->
            <TextView
                android:id="@+id/aboutTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ElectriCity Bill App"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/dark_red"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="8dp" />

            <!-- Developer Details -->
            <TextView
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="Developed by:"
                android:textColor="@color/dark_red"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"/>

            <TextView
                android:id="@+id/aboutText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Name: NUR ARYSHA IRDINA BINTI ZULKHAIREEE\nStudent ID: 2023141161\nGroup: CDCS2405A\nCourse: ICT602 - Mobile Technology and Development"
                android:textColor="@color/dark_red"
                android:textSize="16sp"
                android:gravity="center"/>

            <!-- GitHub Button -->
            <Button
                android:id="@+id/github_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GitHub Link"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/dark_red"
                android:layout_marginTop="16dp"/>

            <!-- Back Button -->
            <Button
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back to Main Page"
                android:layout_marginBottom="24dp"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/dark_red"/>

            <!-- Copyright Information -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Â© 2025 Arysha App. All rights reserved."
                android:textSize="14sp"
                android:textColor="@color/dark_red"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>